{
  "name": "blankwars-backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "build": "sh scripts/prebuild.sh && tsc --noEmitOnError false --skipLibCheck",
    "dev": "ts-node --transpile-only src/server.ts",
    "start": "npm run migrate && node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "setup-db": "./setup-database.sh",
    "migrate": "ts-node scripts/migrate.ts",
    "db:reset": "./setup-database.sh && npm run migrate",
    "test:webhook": "ts-node src/scripts/testWebhookDelivery.ts",
    "fix-db-ownership": "ts-node src/scripts/fixDatabaseOwnership.ts",
    "audit:battle": "ts-node scripts/audit_battle_system.ts",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'No linter configured'"
  },
  "keywords": [
    "game",
    "tcg",
    "ai",
    "chat",
    "battles"
  ],
  "author": "",
  "license": "ISC",
  "description": "Blank Wars backend API server",
