# Environment Configuration for Blank Wars
# Copy this to .env and fill in your values

# Database Configuration (REQUIRED)
# For PostgreSQL (production/staging):
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# For local development, you might use:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/blankwars

# Application Environment
NODE_ENV=development

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
QR_SECRET=your-qr-code-signing-secret-here

# API Keys (if using AI features)
OPENAI_API_KEY=your-openai-api-key-here

# Server Configuration
PORT=3001

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Payment Integration (if using Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Logging
LOG_LEVEL=info